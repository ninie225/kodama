{% extends 'base.html.twig' %}
{% block title %}Panier{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/panier.css') }}">
{% endblock %}
{% block body %}
<div class="panier-page d-flex flex-column min-vh-100">
    {% include 'navbar.html.twig' %}
    <div class="container my-5 flex-grow-1">
        <h2 class="mb-4">Votre panier</h2>
        <div class="row g-4">
            <!-- Carte des plats (gauche ou en haut sur mobile) -->
            <div class="col-md-8 col-lg-8">
                <div class="card bg-white h-100 shadow-sm">
                    <div class="card-body p-4">
                        {% if panier is empty %}
                            <p class="text-center my-5">Votre panier est vide.</p>
                        {% else %}
                            {% for item in panier %}
                            <div class="d-flex align-items-center py-3 {% if not loop.last %}border-bottom{% endif %}">
                                <img src="{{ asset(item.plat.photo) }}" alt="{{ item.plat.nom }}" class="rounded-2">
                                <div class="flex-grow-1">
                                    <h5 class="mb-1">{{ item.plat.nom }}</h5>
                                    <p class="mb-0 text-muted"><strong>{{ item.plat.prix }} €</strong> (unité)</p>
                                </div>
                                <div class="d-flex align-items-center">
                                    <a href="{{ path('app_del_panier', {'plat': item.plat.id}) }}" class="btn btn-sm btn-outline-success rounded-pill">-</a>
                                    <span class="mx-2">{{ item.quantite }}</span>
                                    <a href="{{ path('app_add_panier', {'plat': item.plat.id}) }}" class="btn btn-sm btn-outline-success rounded-pill">+</a>
                                </div>
                                <div class="ms-3 fw-bold">
                                    {{ (item.plat.prix * item.quantite) }} €
                                </div>
                            </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
            <!-- Carte récapitulatif (droite ou en bas sur mobile) -->
            <div class="col-md-4 col-lg-4">
                <div class="card bg-white h-100 shadow-sm">
                    <div class="card-body p-4">
                        {% if panier is not empty %}
                            <h5 class="mb-4">Récapitulatif</h5>
                            <ul class="list-group list-group-flush mb-4">
                                {% set total = 0 %}
                                {% for item in panier %}
                                    {% set sous_total = item.plat.prix * item.quantite %}
                                    {% set total = total + sous_total %}
                                {% endfor %}
                                <li class="list-group-item d-flex justify-content-between py-3">
                                    <span>Sous-total</span>
                                    <span>{{ total }} €</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between py-3 border-top">
                                    <span>Frais de livraison</span>
                                    <span>4,00 €</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between py-3 fw-bold border-top">
                                    <span>Total</span>
                                    <span>{{ total + 4 }} €</span>
                                </li>
                            </ul>
                            <a href="#" class="btn btn-success w-100 py-2 rounded-pill">Valider ma commande</a>
                        {% endif %}
                        <a href="{{ path('app_carte') }}" class="btn btn-outline-secondary w-100 py-2 rounded-pill mt-3">Continuer mon shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
