{% extends 'base.html.twig' %}

{% block title %}Gestion des commandes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-page d-flex flex-column">
    {% include 'navbar.html.twig' %}
    <div class="d-flex flex-column justify-content-start align-items-center text-center text-white px-3">
        <h1 class="display-4 text-uppercase fw-bold mb-4">Gestion des commandes</h1>

        <div class="container flex-grow-1 d-flex align-items-center mb-5">
            <div class="row align-items-center w-100">
                <div class="bg-white text-black p-5 rounded-4 border border-light col-md-10 offset-md-1">

                    <div class="d-flex justify-content-between mb-3">
                        <h3 class="fw-bold">Liste des commandes</h3>
                    </div>

                    <table class="table table-striped table-hover text-start align-middle">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Total (€)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for commande in commandes %}
                                <tr>
                                    <td>{{ commande.id }}</td>
                                    <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                                    <td>{{commande.utilisateur.nom|upper}} {{ commande.utilisateur.prenom }}</td>
                                    <td>{{ commande.total ?? '—' }}</td>
                                    <td>
                                        <a href="{{ path('app_commande_detail', {'id': commande.id}) }}"
                                           class="btn btn-sm btn-outline-primary rounded-5">
                                            Détails
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">Aucune commande trouvée.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <div class="text-start mt-4">
                        <a href="{{ path('app_login') }}"
                           class="btn btn-outline-secondary rounded-5 px-4">
                            ← Retour
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
