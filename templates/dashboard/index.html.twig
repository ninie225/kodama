{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-page d-flex flex-column">
    {% include 'navbar.html.twig' %}
    <div class="d-flex flex-column justify-content-start align-items-center text-center text-white px-3">
        <h1 class="display-4 text-uppercase fw-bold mb-4">Gestion des plats</h1>

        <div class="container flex-grow-1 d-flex align-items-center mb-5">
            <div class="row align-items-center w-100">
                <div class="bg-white text-black p-5 rounded-4 border border-light col-md-10 offset-md-1">

                    <div class="d-flex justify-content-between mb-3">
                        <h3 class="fw-bold">Liste des plats</h3>
                        <a href="{{ path('app_nouveau_plat') }}" class="btn btn-outline-success rounded-5">
                            Ajouter un plat
                        </a>
                    </div>

                    <table class="table table-striped table-hover text-start align-middle">
                        <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Catégorie</th>
                                <th>Statut</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for plat in plats %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_details', {'id': plat.id}) }}">
                                            <img src="{{ asset(plat.photo) }}" 
                                                alt="{{ plat.nom }}"
                                                class="img-fluid object-fit-cover rounded-3 shadow-sm dashboard-img">
                                        </a>
                                    </td>
                                    <td>{{ plat.nom }}</td>
                                    <td>{{ plat.prix }} €</td>
                                    <td>{{ plat.categorie |capitalize}}</td>
                                    <td>
                                        {% if plat.active %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_dashboard_toggle', {'id': plat.id}) }}"
                                           class="btn btn-sm btn-outline-primary rounded-5">
                                            {{ plat.active ? 'Désactiver' : 'Activer' }}
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">Aucun plat trouvé.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <div class="text-start mt-4">
                        <a href="{{ path('app_login') }}"
                           class="btn btn-outline-secondary rounded-5 px-4">
                            ← Retour
                        </a>
                    </div>

                </div>
            </div>
        </div>

        {# Messages flash #}
        <div class="col-6">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="container alert alert-{{ label }} alert-gradient alert-dismissible fade show shadow" role="alert">
                        <strong>✓</strong> {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
