{% extends 'base.html.twig' %}

{% block title %}Détail de ma commande #{{ commande.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-page d-flex flex-column">
    {% include 'navbar.html.twig' %}

    <div class="d-flex flex-column justify-content-start align-items-center text-center text-white px-3">
        <h1 class="display-5 text-uppercase fw-bold mb-4">
            Détail de ma commande #{{ commande.id }}
        </h1>

        <div class="container mb-5">
            <div class="bg-white text-black p-5 rounded-4 border border-light col-md-10 offset-md-1">

                <h3 class="fw-bold mb-3">Plats commandés</h3>

                <table class="table table-striped table-hover text-start align-middle">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Nom</th>
                            <th>Quantité</th>
                            <th>Prix unitaire (€)</th>
                            <th>Sous-total (€)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for detail in commande.details %}
                            {% set plat = detail.plat %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_details', {'id': plat.id}) }}">
                                        <img src="{{ asset(plat.photo) }}" 
                                             alt="{{ plat.nom }}"
                                             class="img-fluid object-fit-cover rounded-3 shadow-sm dashboard-img">
                                    </a>
                                </td>
                                <td>{{ plat.nom|capitalize }}</td>
                                <td>{{ detail.quantite }}</td>
                                <td>{{ plat.prix|number_format(2, ',', ' ') }}</td>
                                <td>{{ (plat.prix * detail.quantite)|number_format(2, ',', ' ') }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucun plat dans cette commande.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="d-flex justify-content-end align-items-center mt-4 gap-4">
                    {% set etat = commande.etat %}
                    {% if etat == 0 %}
                        <span class="badge bg-secondary px-3 py-2 fs-6">Payée</span>
                    {% elseif etat == 1 %}
                        <span class="badge bg-warning text-dark px-3 py-2 fs-6">En préparation</span>
                    {% elseif etat == 2 %}
                        <span class="badge bg-info text-dark px-3 py-2 fs-6">En cours de livraison</span>
                    {% elseif etat == 3 %}
                        <span class="badge bg-success px-3 py-2 fs-6">Livrée</span>
                    {% else %}
                        <span class="badge bg-dark px-3 py-2 fs-6">Statut inconnu</span>
                    {% endif %}

                    <div class="fw-bold fs-5 text-end">
                        Total : {{ commande.total|number_format(2, ',', ' ') }} €
                    </div>
                </div>

                <div class="text-start mt-4">
                    <a href="{{ path('app_commandes_client') }}"
                       class="btn btn-outline-secondary rounded-5 px-4">
                        ← Retour
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
