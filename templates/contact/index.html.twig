{% extends 'base.html.twig' %}
{% block title %}Formulaire de contact{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/contact.css') }}">
{% endblock %}
{% block body %}

<div class="contact-page d-flex flex-column">
    {% include 'navbar.html.twig' %}
    <div class="d-flex flex-column justify-content-start align-items-center text-center text-white px-3">
        <h1 class="display-4 text-uppercase fw-bold">Formulaire de contact</h1>
        <p class="h5 my-3">Une question ? Un problème sur une commande ?</p>
        <p class="h5 my-3">Contactez-nous via le formulaire ci-dessous. </p>
        <p class="mb-5">Pour toute réservation de groupe, veuillez nous appeler directement !</p>
    </div>
    <div class="container mt-4">
        <div class="row align-items-center">
            <!-- Colonne gauche : informations sur le restaurant -->
            <div class="col-md-6 mb-4 mb-md-0">
                <!-- Horaires -->
                <p class="mb-0"><strong>Horaires d'ouverture :</strong></p>
                <p>Lun-Sam 12h-14h / 19h-00h</p>
                <!-- Adresse -->
                <p class="mb-0"><strong>Adresse :</strong></p>
                <p>123 Rue de la Cuisine<br>Paris, France</p>
                <!-- Téléphone -->
                <p class="mb-0"><strong>Téléphone :</strong></p>
                <p><a href="tel:0612345678" class="btn p-0">06 12 34 56 78</a></p>
                <!-- Email -->
                <p class="mb-0"><strong>Email :</strong></p>
                <p class="btn p-0"><a href="mailto:kodamaskitchen@gmail.com" class="btn p-0">kodamaskitchen@gmail.com</a></p>
            </div>
            <!-- Colonne droite : formulaire de contact -->
            <div class="col-md-6">
                <div class="contact-form p-4 rounded-4 border border-light bg-transparent">
                    {{ form_start(form) }}
                        {% for field in form %}
                            {{ form_widget(field, {
                                'label': false,
                                'attr': {
                                    'placeholder': field.vars.label,
                                    'class': 'form-control mb-3'
                                }
                            }) }}
                        {% endfor %}
                        <button class="btn btn-light mt-3" type="submit">Envoyer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {# Affichage des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="container my-4 alert alert-{{ label }} alert-gradient alert-dismissible fade show shadow" role="alert">
                <strong>✓</strong> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endblock %}
